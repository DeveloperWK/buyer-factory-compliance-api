{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"lib": ["ES2017", "ES2018", "ES2019", "ES2020"],
		"moduleResolution": "Node",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"],
}
